<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="external_layout_magnus_header_ou">
        <div class="header">
            <div class="row">
                <div class="row backgroundimage" style="position:relative;font-size:3em;
                            width:100%;height:100%;z-index:1000;padding-left:5px;">
                    <img t-if="o.operating_unit_id.logo" t-att-src="'data:image/png;base64,%s' % o.operating_unit_id.report_background_image1"
                            style="width:100%; display: block;"/>

                </div>
            </div>
        </div>
        <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-call="web.address_layout"/>
            <t t-raw="0"/>
        </div>
    </template>
    
    <template id="external_layout_magnus">
        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>

        <t t-call="magnus_account.external_layout_magnus_header_ou"><t t-raw="0"/></t>
    </template>


</odoo>